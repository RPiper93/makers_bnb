<% @title = "Requests | " %>
<main class="container col-8">
    <h2 class="text-center">Requests</h2>

    <h4>Requests I've received</h4>
    <% @requests.each do |request| %>
        <ul class="list-spaces">
            <li>
                <%= @space_names.shift %>
                <%= request.status %>
                <%= format_date(request.date_from) %> - <%= format_date(request.date_to) %>
                <% if request.status == 'Not Confirmed' %>
                    <a id="" href="/requests/confirm/<%= request.id %>">Confirm?</a>
                <% end %>
            </li>
        </ul>
    <% end %>
</main>
