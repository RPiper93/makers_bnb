<% @title = "Requests | " %>
<main class="container col-8">
  <h2 class="text-center">Requests</h2>

  <h4>Requests I've received</h4>

  <% @spaces.requests.each do |request| %>
    <ul>
      <li><%= @spaces.map(&:name).join %>
      <%= request.status %>
      <%= format_date(request.start_date) %> - <%= format_date(request.end_date) %>
      <a href="/requests/confirm/<%= request.id %>">Confirm?</a></li>
    </ul>
  <% end %>
</main>
