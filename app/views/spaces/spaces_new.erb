<% @title="#{@space ? "Update Space" : "List a Space"} | " %>
<main class="container col-6">
    <h2 class="text-center"><%= @space ? "Update Space" : "List a Space" %></h2>
    <form action="<%= @space ? "/spaces/update/#{@space.id}" : "/spaces/new" %>" method="post" enctype='multipart/form-data'>
        <label for="name" class="required">
            Name:
        </label>
        <input type="text" id="name" name="name" value="<%= @space.name if @space %>" required />
        
        <label for="description" class="required">
            Description:
        </label>
        <textarea id="description" name="description" cols="30" rows="5"><%= @space.description if @space %></textarea>
    
        <label for="price" class="required">
            Price per night:
        </label>
        <input type='number' id="price" name='price' step="0.01" placeholder="Â£" value="<%= @space.price if @space %>" required class="width-200" />

        <label for="date_from" class="required">
            Available From:
        </label>
        <input type='date' id="date_from" name='date_from' value="<%= @space.date_from if @space %>" min="<%= @today %>" required class="width-200" />
        
        <label for="date_to" class="required">
            Available To:
        </label>    
        <input type='date' id="date_to" name='date_to' value="<%= @space.date_to if @space %>" min="<%= @tomorrow %>"required class="width-200" />
        
        <label for="image" class="image-upload-btn width-200">
            <svg class="icon icon-upload"><use xlink:href="#icon-upload"></use></svg>
            Upload Image
        </label>
        <input type='file' id="image" name="image" accept="image/*" class='width-200' />
        <input type="submit" value="<%= @space ? "Update Space" : "List a Space" %>" class="btn btn-blue" />
    </form>
</main>
