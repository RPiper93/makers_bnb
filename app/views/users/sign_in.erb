<% @title= "Sign In | " %>
<main class="container col-4">
  <div class="account-form">
    <h2 class="text-center">Sign in to <span class="logo-style">MakersBnB</span></h2>
    <form action="/user/sign_in" method="POST">
      <label for="email" class="required">
        Email
      </label>
    	<input type="email" id="email" name="email" placeholder="name@domain.com" />
      <label for="password" class="required">
        Password
      </label>
    	<input type="password" id="password" name="password" placeholder="your password" />
      <button class="unmask" type="button" title="Show/hide password to check content">
          <svg class="icon icon-password"><use xlink:href="#icon-eye"></use></svg>
      </button>
    	<input type="submit" value="Sign in" class="btn btn-blue" />
    </form>
  </div>
</main>